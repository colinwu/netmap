  <table class="list">
  <TR><TH>sysName</TH><TH>IP Address</TH><TH>Type</TH><TH>Capability</TH>

  <% if session[:user_level] == 0 %>
    <TH>Community String</TH><TH colspan = 3>Actions</TH></TR>
